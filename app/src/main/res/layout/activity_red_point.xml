<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.qqredpoint.com.example.customview.qqredpoint.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_set_num"
            android:hint="设置个数"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置个数"
            android:id="@+id/btn_set_num"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_appear"
            android:text="显示"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_disappear"
            android:text="消失"/>
    </LinearLayout>
    <com.example.customview.qqredpoint.RedPointView
        android:id="@+id/red_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
